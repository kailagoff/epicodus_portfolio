<% @skills.each do |skill| %>
 <div class="col-md-3">
   <div id="skills_list">
     <h5><%= link_to skill.skill_name, skill_path(skill) %></h5>
     <%= link_to image_tag(skill.image.url(:thumb)), skill_path(skill) %>
   </div>
   <br><br><br><br><br><br><br>
 </div>
<% end %>

<% if current_user %>
  <%= link_to "New skill", new_skill_path, class: "btn btn-info" %></p>
<% end %>
