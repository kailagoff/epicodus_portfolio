<h1><%= @skill.skill_name %></h1>
<h1><%= @skill.skill_description %></h1>
<h1><%= image_tag @skill.image.url(:thumb) %></h1>


<p><%= link_to "Return to skills", skills_path, class: "btn btn-info" %></p>
<p><%= link_to "Edit skill", edit_skill_path, class: "btn btn-info" %></p>
<p><%= link_to "Delete post", skill_path(@skill), :data => {:confirm => "Are you sure you want to delete this skill?", :method => "delete"}, class: "btn btn-info" %></p>
