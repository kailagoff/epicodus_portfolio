
<div id="blog-show">
  <div class="row">
    <div class="col-md-5">
      <%= image_tag @post.image.url(:large) %>
    </div>
    <div class="col-md-7" id="post_content">
      <h3><%= @post.title %></h3>
      <p><%= @post.post_content %></p>
    </div>
  </div>
</div>

<div id="comments">
    <% if @post.comments.any? %>
      <% if current_user  %>
        <% @post.comments.each do |comment| %>
          <p><%= comment.comment_content %>  <strong>-<%= comment.author %></strong><%= link_to "Delete", post_comment_path(@post, comment),
          :data => {:confirm => "Are you sure you want to delete this comment?",
          :method => "delete"} %></p>
        <% end %>
      <% else %>
          <% @post.comments.each do |comment| %>
            <p><%= comment.comment_content %>  <strong>-<%= comment.author %></strong></p>
          <% end %>
      <% end %>
    <% end %>
  </div>
