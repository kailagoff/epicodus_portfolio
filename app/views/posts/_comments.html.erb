<div id="comments_<%= @post.id %>">
  <h4><%= link_to "Hide comments", posts_path, id: "hide_comments" %></h4>
  <% if @post.comments.any? %>
    <% if current_user %>
      <% @post.comments.each do |comment| %>
        <p><%= comment.author %> <%= comment.comment_content %>
          <%= link_to "Delete", post_comment_path(@post, comment),
        :data => {:confirm => "Are you sure you want to delete this comment?",
        :method => "delete"} %></p>
      <% end %>
    <% else %>
        <% @post.comments.each do |comment| %>
          <p> <%= comment.author %> <%= comment.comment_content %></p>
        <% end %>
    <% end %>
  <% end %>
</div>
